+package com.example.order.application;
+
+import com.example.order.domain.*;
+import lombok.RequiredArgsConstructor;
+import org.springframework.stereotype.Service;
+import org.springframework.transaction.annotation.Transactional;
+
+import java.math.BigDecimal;
+import java.util.ArrayList;
+import java.util.HashMap;
+import java.util.List;
+import java.util.Map;
+import java.util.stream.Collectors;
+
+@Service
+@RequiredArgsConstructor
+public class OrderService {
+
+    private final OrderRepository orderRepository;
+    private final MemberClient memberClient;
+    private final ProductClient productClient;
+    private final PaymentClient paymentClient;
+
+    @Transactional
+    public Long createOrder(CreateOrderCommand command) {
+        // 회원 존재 여부 확인
+        MemberDto member = memberClient.getMember(command.getMemberId());
+        if (member == null) {
+            throw new RuntimeException("회원을 찾을 수 없습니다: " + command.getMemberId());
+        }
+
+        // 상품 재고 확인 및 주문 항목 생성
+        List<OrderItem> items = new ArrayList<>();
+        for (CreateOrderCommand.OrderItemRequest req : command.getItems()) {
+            ProductDto product = productClient.getProduct(req.getProductId());
+
+            if (product.getStock() < req.getQuantity()) {
+                throw new RuntimeException("재고 부족: " + product.getName());
+            }
+
+            OrderItem item = OrderItem.create(
+                product.getId(), product.getName(), product.getPrice(), req.getQuantity()
+            );
+            items.add(item);
+        }
+
+        // 주문 생성
+        Order order = Order.create(
+            command.getMemberId(), command.getAddress(), command.getPhone(), items
+        );
+        orderRepository.save(order);
+
+        // 재고 차감
+        for (CreateOrderCommand.OrderItemRequest req : command.getItems()) {
+            productClient.decreaseStock(req.getProductId(), req.getQuantity());
+        }
+
+        return order.getId();
+    }
+
+    @Transactional
+    public void cancelOrder(Long orderId) {
+        Order order = orderRepository.findById(orderId)
+            .orElseThrow(() -> new RuntimeException("주문을 찾을 수 없습니다: " + orderId));
+
+        order.cancel();
+
+        // 재고 복구
+        for (OrderItem item : order.getOrderItems()) {
+            productClient.increaseStock(item.getProductId(), item.getQuantity());
+        }
+
+        // 결제 취소
+        paymentClient.cancelPayment(orderId);
+    }
+
+    @Transactional(readOnly = true)
+    public OrderDetailDto getOrder(Long orderId) {
+        Order order = orderRepository.findById(orderId)
+            .orElseThrow(() -> new RuntimeException("주문을 찾을 수 없습니다: " + orderId));
+
+        return toDetailDto(order);
+    }
+
+    @Transactional(readOnly = true)
+    public List<OrderDetailDto> getMyOrders(Long memberId) {
+        List<Order> orders = orderRepository.findByMemberId(memberId);
+        List<OrderDetailDto> result = new ArrayList<>();
+        for (Order order : orders) {
+            result.add(toDetailDto(order));
+        }
+        return result;
+    }
+
+    @Transactional(readOnly = true)
+    public Map<String, Object> getOrderStatistics() {
+        List<Order> allOrders = orderRepository.findAll();
+
+        Map<String, Object> stats = new HashMap<>();
+        stats.put("totalOrders", allOrders.size());
+        stats.put("totalRevenue", allOrders.stream()
+            .filter(o -> o.getStatus() != OrderStatus.CANCELLED)
+            .map(Order::getTotalAmount)
+            .reduce(BigDecimal.ZERO, BigDecimal::add));
+        stats.put("cancelRate",
+            (double) allOrders.stream().filter(o -> o.getStatus() == OrderStatus.CANCELLED).count()
+            / allOrders.size() * 100);
+
+        return stats;
+    }
+
+    private OrderDetailDto toDetailDto(Order order) {
+        OrderDetailDto dto = new OrderDetailDto();
+        dto.setId(order.getId());
+        dto.setStatus(order.getStatus().name());
+        dto.setTotalAmount(order.getTotalAmount());
+        dto.setOrderedAt(order.getOrderedAt());
+        return dto;
+    }
+}
